@model ProjectX.Models.Shipment

@{
    ViewBag.Title = "Delete Shipment";
}

<h2 class="text-center mt-5">Delete Shipment</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4" style="background-color: rgba(255, 255, 255, 0.8); border-radius: 10px;">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="ItemName">Item Name:</label>
                        <span class="form-control-plaintext">@Model.ItemName</span>
                    </div>
                    <div class="form-group">
                        <label for="Location">Location:</label>
                        <span class="form-control-plaintext">@Model.Location</span>
                    </div>
                    <div class="form-group">
                        <label for="Destination">Destination:</label>
                        <span class="form-control-plaintext">@Model.Destination</span>
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

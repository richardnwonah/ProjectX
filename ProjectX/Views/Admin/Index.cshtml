@model IEnumerable<ProjectX.Models.Shipment>

@{
    ViewBag.Title = "Admin Dashboard";
}

<h2 class="text-center mt-5">Admin Dashboard</h2>
<div class="container mt-5">
    <div class="row mb-3">
        <div class="col">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-success">Add New Shipment</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Item Name</th>
                            <th>Location</th>
                            <th>Destination</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var shipment in Model)
                        {
                            <tr>
                                <td>@shipment.ItemName</td>
                                <td>@shipment.Location</td>
                                <td>@shipment.Destination</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Admin", new { id = shipment.Id })" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="@Url.Action("Delete", "Admin", new { id = shipment.Id })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

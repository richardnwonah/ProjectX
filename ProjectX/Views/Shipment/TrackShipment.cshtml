@{
    ViewBag.Title = "Track Shipment";
}

<h2 class="text-center mt-5">Track Shipment</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4" style="background-color: rgba(255, 255, 255, 0.8); border-radius: 10px;">
                <form method="post">
                    <div class="form-group">
                        <label for="itemId">Item ID (GUID):</label>
                        <input type="text" class="form-control" id="itemId" name="id" required />
                    </div>
                    <div class="form-group">
                        <label for="passcode">Passcode:</label>
                        <input type="text" class="form-control" id="passcode" name="passcode" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Track</button>
                    <p class="mt-3 text-center text-danger">@ViewBag.Message</p>
                </form>
            </div>
        </div>
    </div>
</div>

